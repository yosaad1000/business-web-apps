# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration
SUPABASE_DB_URL=postgresql://postgres.your_project_ref:YOUR_DB_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres
SUPABASE_DB_USERNAME=postgres.your_project_ref
SUPABASE_DB_PASSWORD=your_database_password

# ERP System Configuration
ERP_JWT_SECRET=your-jwt-secret-key-change-in-production
ERP_SESSION_TIMEOUT=3600
ERP_NOTIFICATION_EMAIL=admin@company.com

# Service Ports
API_GATEWAY_PORT=8080
FRONTEND_PORT=3000
EMPLOYEE_SERVICE_PORT=8081
INVOICE_SERVICE_PORT=8082
QUIZ_SERVICE_PORT=8083
JOB_SERVICE_PORT=8084
CRUD_SERVICE_PORT=8085

# Module Configuration
HRMS_ENABLED=true
INVOICE_ENABLED=true
QUIZ_ENABLED=true
JOBS_ENABLED=true
CRUD_ENABLED=true

# Integration Settings
CROSS_MODULE_EVENTS=true
REAL_TIME_NOTIFICATIONS=true
AUDIT_LOGGING=true

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_SUPABASE_URL=${SUPABASE_URL}
REACT_APP_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# Development Settings
NODE_ENV=development
SPRING_PROFILES_ACTIVE=development
LOG_LEVEL=INFO